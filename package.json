{
  "name": "jaime.rios.dev",
  "description": "Source code for my personal website",
  "author": {
    "name": "Jaime Rios",
    "email": "jaime.rios.dev@outlook.com",
    "url": "https://jaime.rios.dev"
  },
  "license": "AGPL-3.0-only",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/papaponmx/jaimerios.dev.git"
  },
  "scripts": {
    "build": "sapper build --legacy",
    "dev": "sapper dev",
    "dev:prod": "sapper export && npx serve __sapper__/export",
    "export": "sapper export --legacy",
    "format": "npx prettier --write ./**/*.{js,svelte,md,html,css,json}",
    "lint:fix": "eslint --fix './**/*.{js,svelte}'",
    "lint": "eslint './**/*.{js,svelte}'",
    "prelint": "npm run format",
    "pretest": "npm run lint",
    "start": "node __sapper__/build"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "dotenv": "^8.2.0",
    "polka": "next",
    "sirv": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-replace": "^2.2.0",
    "@types/babel__core": "^7.1.9",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mdsvex": "^0.8.8",
    "node-fetch": "^2.6.1",
    "prettier": "2.1.2",
    "prettier-plugin-svelte": "^1.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "sapper": "^0.28.0",
    "svelte": "^3.17.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,svelte,md,html,css,json}": "prettier --write"
  }
}
